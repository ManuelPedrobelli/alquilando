services:
  - type: web
    name: alquileresapp
    env: docker
    plan: free
    region: oregon
    dockerfilePath: ./Dockerfile
    envVars:
      - key: ASPNETCORE_URLS
        value: http://+:10000
      - key: DOTNET_RUNNING_IN_CONTAINER
        value: true
      - key: DOTNET_USE_POLLING_FILE_WATCHER
        value: true
      - key: DOTNET_CLI_TELEMETRY_OPTOUT
        value: true
      - key: DOTNET_PRINT_TELEMETRY_MESSAGE
        value: false
      - key: ConnectionStrings__DefaultConnection
        fromDatabase:
          name: alquileres-db
          property: connectionString

databases:
  - name: alquileres-db
    plan: free
    region: oregon
    databaseName: alquileresdb
    user: alquileresuser
